{
  "name": "userscript-metadata-webpack-plugin",
  "version": "0.2.12",
  "description": "A webpack plugin to generate userscript metadata and prepend to js",
  "types": "./dist/esm/index.d.ts",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "files": [
    "./dist/",
    "./src/",
    "package.json"
  ],
  "prettier": {
    "printWidth": 120,
    "useTabs": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "endOfLine": "lf",
    "semi": true
  },
  "scripts": {
    "format": "prettier -w ./",
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "test": "yarn build && webpack -c example/webpack.config.prod.js",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,ts,tsx,json}": [
      "prettier --ignore-path ./.prettierignore --write "
    ]
  },
  "repository": {
    "url": "https://github.com/Trim21/userscript-metadata-webpack-plugin",
    "type": "git"
  },
  "keywords": [
    "webpack",
    "userscript",
    "plugin",
    "metadata"
  ],
  "author": {
    "name": "Trim21",
    "email": "trim21me@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/webpack-sources": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "8.27.0",
    "eslint-config-standard": "17.0.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.5",
    "eslint-plugin-n": "15.5.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-standard": "5.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rollup": "^3.2.3",
    "rollup-plugin-node-externals": "^5.0.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^4.8.4",
    "webpack": "^5.26.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "userscript-metadata-generator": "^0.0.11"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  }
}
